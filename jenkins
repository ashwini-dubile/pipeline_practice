pipeline {
    agent any

    stages {
        stage('Cloning git repo') {
            steps {
                echo 'cloning git repo'
                git url: "https://github.com/ashwini-dubile/pipeline_practice.git" , branch: "main"
            }    
        }
        
        stage('Building image') {
            steps {
                sh "/usr/bin/docker build . -t flask_app"
            }
        }
        
        stage('Run Application') {
            steps {
                sh "/usr/bin/docker run -p 9094:5000 -d flask_app"
            }
        }
    }
}
